{
  "name": "express-typescript-template",
  "version": "1.0.0",
  "description": "Production ready express + typescript template",
  "main": "dist/index.js",
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "nodemon src/index.ts",
    "prebuild": "rimraf dist",
    "build": "tsc && copyfiles -u 1 src/docs/swagger.yaml dist",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:band": "jest --runInBand",
    "test:watchBand": "jest --watchAll --runInBand",
    "test:ci": "jest --ci",
    "test:cov": "jest --coverage"
  },
  "author": "Umair Saleem",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/express": "^4.17.18",
    "@types/http-errors": "^2.0.2",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/supertest": "^2.0.13",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "dependencies": {
    "compression": "^1.7.4",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "pm2": "^5.3.0",
    "rimraf": "^5.0.5",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.10.0",
    "yamljs": "^0.3.0"
  }
}
